<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="MainStage" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Controller.GameController">
   <bottom>
      <ToolBar prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #d9d9d9;" BorderPane.alignment="BOTTOM_CENTER">
        <items>
          <Button fx:id="startBtn" minWidth="61.0" mnemonicParsing="false" onAction="#handleStartBtn" prefWidth="61.0" text="START" translateX="10.0" />
            <Label text="Speed:">
               <padding>
                  <Insets left="30.0" />
               </padding>
            </Label>
            <Slider fx:id="speedSlider" majorTickUnit="100.0" max="1000.0" min="100.0" minorTickCount="0" showTickMarks="true" value="500.0" />
        </items>
      </ToolBar>
   </bottom>
</BorderPane>
